<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="8dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/date_specifier_sender_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="today"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:textColor="#808080"/>
        </LinearLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/sender_image_media_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:maxHeight="400dp"
                android:adjustViewBounds="true"
                android:src="@drawable/fire_chat"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/chat_back_me"
            android:elevation="5dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/image_ll">

            <TextView
                android:id="@+id/sender_message_media_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:text="the message will look lke this"
                android:textColor="@color/myWhite"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_light"/>

            <TextView
                android:id="@+id/sender_time_media_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="2dp"
                android:text="9:00"
                android:textColor="@color/myWhite"
                android:textSize="10dp"
                android:textStyle="italic" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>